<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".GoalListActivity" >

    <TextView
        android:id="@+id/t_event_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="31/12/14"
	    android:layout_marginRight="4dp"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/t_event_goal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/t_progress"
        android:layout_below="@+id/t_event_date"
        android:layout_marginLeft="16dp"
        android:text="To Prepare the PMI exam / Read the PMBok"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/t_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/t_event_date"
        android:layout_below="@+id/t_event_goal"
        android:text="In Progress"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <CheckBox
        android:id="@+id/b_event_done"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/t_event_title" />

    <TextView
        android:id="@+id/t_event_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/t_event_goal"
        android:layout_toRightOf="@+id/t_event_date"
        android:text="My Task #1"
        android:textAppearance="?android:attr/textAppearanceMedium" />

</RelativeLayout>
